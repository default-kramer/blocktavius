<Window x:Class="Blocktavius.AppDQB2.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blocktavius.AppDQB2"
        mc:Ignorable="d"
        Title="Profile Settings" Height="450" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" MaxWidth="650">
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock FontSize="18">SD Directory</TextBlock>
            </StackPanel>
            <StackPanel Margin="0,2,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox Text="{Binding Path=SDFullPath, Mode=OneWay}" IsReadOnly="True" MinWidth="150"></TextBox>
                <Button Content="Choose..."></Button>
            </StackPanel>
            <StackPanel Margin="0,16,0,0" Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock FontSize="18">Backups</TextBlock>
            </StackPanel>
            <StackPanel Margin="0,4,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                <CheckBox Content="Create Backups?" IsChecked="{Binding CreateBackups}"></CheckBox>
            </StackPanel>
            <StackPanel Margin="0,6,0,0" Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Path=BackupLocationText, Mode=OneWay}" Visibility="{Binding BackupLocationVisibility}"></TextBlock>
                <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="Red" Visibility="{Binding BackupWarningVisibility}">
                    Warning: Writable slots exist, but backups are disabled.
                    You are responsible for backing up any important data!
                </TextBlock>
            </StackPanel>
            <StackPanel Margin="0,16,0,0" Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock FontSize="18">Save Slots</TextBlock>
            </StackPanel>
            <TextBlock Margin="0,4,0,0" Foreground="Red" HorizontalAlignment="Center" Visibility="{Binding NoSaveSlotsWarningVisibility}">
                No save slots exist!
                The SD directory should contain B00/B01/B02 subdirectories for slots 1/2/3.
            </TextBlock>
            <ListView HorizontalAlignment="Center" ItemsSource="{Binding SaveSlots}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Slot" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                        <GridViewColumn Header="Writable?">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsWritable}"></CheckBox>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button FontSize="20" Content="Confirm" Click="Confirm_Click"></Button>
            <Button FontSize="20" Content="Cancel" Margin="12,0,0,0" Click="Cancel_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
