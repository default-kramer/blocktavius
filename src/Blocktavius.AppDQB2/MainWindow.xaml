<Window x:Class="Blocktavius.AppDQB2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blocktavius.AppDQB2"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ToolBar>
            <Button>File</Button>
            <Button Click="PreviewButtonClicked">Preview</Button>
        </ToolBar>
        <TabControl Grid.Row="1">
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Project Parameters</TextBlock>
                </TabItem.Header>
                <local:ProjectParamsControl></local:ProjectParamsControl>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Images"></TextBlock>
                </TabItem.Header>
                <local:LayeredPainterControl></local:LayeredPainterControl>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Crop+Zoom Test"></TextBlock>
                </TabItem.Header>
                <local:ZoomToCropControl Background="MintCream">
                    <local:ZoomToCropControl.ZoomableContent>
                        <Grid Width="300" Height="200">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Background="Aquamarine"></Grid>
                            <Grid Grid.Column="1" Background="Yellow"></Grid>
                        </Grid>
                    </local:ZoomToCropControl.ZoomableContent>
                </local:ZoomToCropControl>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Scripts</TextBlock>
                </TabItem.Header>
                <local:ScriptsControl></local:ScriptsControl>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
