<UserControl x:Class="Blocktavius.AppDQB2.ProjectParamsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Blocktavius.AppDQB2"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Project File:" FontSize="14" FontWeight="Bold"></Label>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBox IsReadOnly="True" MinWidth="300" Text="{Binding ProjectFilePathToDisplay, Mode=OneWay}"></TextBox>
        </StackPanel>
        <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Source:" FontSize="14" FontWeight="Bold"></Label>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <Label VerticalAlignment="Center">Slot:</Label>
            <ComboBox MinWidth="75" VerticalAlignment="Center" ItemsSource="{Binding SourceSlots}" SelectedItem="{Binding SelectedSourceSlot}" DisplayMemberPath="Name"></ComboBox>
            <Label VerticalAlignment="Center" Margin="16,0,0,0">Stage:</Label>
            <ComboBox MinWidth="150" VerticalAlignment="Center" ItemsSource="{Binding SourceStages}" SelectedItem="{Binding SelectedSourceStage}" DisplayMemberPath="Name"></ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" Margin="12,6,0,0">
            <TextBlock TextWrapping="Wrap"><Run Text="Will read from:  "></Run><Run Text="{Binding StgdatFilePath, Mode=OneWay}"></Run></TextBlock>
            <CheckBox Content="Include in preview?" IsChecked="{Binding IncludeStgdatInPreview}" Margin="0,6,0,0"></CheckBox>
            <Button HorizontalAlignment="Left" Content="Edit Chunk Grid" Click="EditChunkGrid_Click" Margin="0,8,0,0"></Button>
        </StackPanel>
        <Label Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" Content="Destination:" FontSize="14" FontWeight="Bold"></Label>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
            <Label VerticalAlignment="Center">Slot:</Label>
            <ComboBox MinWidth="75" VerticalAlignment="Center" ItemsSource="{Binding DestSlots}" SelectedItem="{Binding SelectedDestSlot}" DisplayMemberPath="Name"></ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Vertical" Margin="12,6,0,0">
            <TextBlock TextWrapping="Wrap"><Run Text="Will write to:  "></Run><Run Text="{Binding DestFullPath, Mode=OneWay}"></Run></TextBlock>
        </StackPanel>
        <Label Grid.Row="8" Grid.Column="0" HorizontalAlignment="Right" Content="Notes:" FontSize="14" FontWeight="Bold"></Label>
        <TextBox Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" Width="400"></TextBox>
    </Grid>
</UserControl>