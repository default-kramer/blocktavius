<Window x:Class="Blocktavius.AppDQB2.PropGridEditors.BlockSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blocktavius.AppDQB2.PropGridEditors"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="Block Selector" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl x:Name="tabControl">
            <TabItem Header="Blocks">
                <ListView x:Name="lvBlocks"></ListView>
            </TabItem>
            <TabItem Header="Mottlers">
                <TextBlock Text="TODO list the mottlers here..."></TextBlock>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnChoose" Content="Choose" Click="btnChoose_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
