<UserControl x:Class="Blocktavius.AppDQB2.ResourcesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Blocktavius.AppDQB2"
             xmlns:res="clr-namespace:Blocktavius.AppDQB2.Resources"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type res:ExtractedSnippetResourceVM}">
            <res:ExtractedSnippetResourceEditor/>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="150"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*" MinWidth="200"/>
        </Grid.ColumnDefinitions>

        <!-- Master View -->
        <DockPanel Grid.Column="0" LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="2">
                <Button Content="Add" Margin="2" Command="{Binding CommandAddSnippet}"/>
                <Button Content="Remove" Margin="2"/>
            </StackPanel>
            <ListBox x:Name="MasterList" ItemsSource="{Binding ExtractedSnippets}" DisplayMemberPath="Name">
                <!-- ItemsSource will be bound to the list of resources -->
            </ListBox>
        </DockPanel>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

        <!-- Detail View -->
        <ContentControl Grid.Column="2" Content="{Binding ElementName=MasterList, Path=SelectedItem}" />
    </Grid>
</UserControl>