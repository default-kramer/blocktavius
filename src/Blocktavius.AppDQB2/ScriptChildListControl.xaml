<UserControl x:Class="Blocktavius.AppDQB2.ScriptChildListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blocktavius.AppDQB2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ItemsControl ItemsSource="{Binding ChildNodes}" HorizontalAlignment="Left" HorizontalContentAlignment="Left">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border BorderThickness="1" BorderBrush="Black" Margin="0,5,0,0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                        <Border Background="LightGray" Padding="5" BorderThickness="0,0,0,1" BorderBrush="Black">
                            <TextBlock Text="TODO - move up, move down, delete, etc..."></TextBlock>
                        </Border>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                            <TextBlock Text="{Binding}"></TextBlock>
                            <TextBlock Text="{Binding Child}"></TextBlock>
                            <local:ScriptNodeControl DataContext="{Binding Child}"></local:ScriptNodeControl>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
