<UserControl x:Class="Blocktavius.AppDQB2.ScriptChildListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blocktavius.AppDQB2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ItemsControl ItemsSource="{Binding ChildNodes}" HorizontalAlignment="Left">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border BorderThickness="2" Margin="0,8,0,0" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                    <Border.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="BorderBrush" Value="Transparent"></Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Child.IsSelected}" Value="True">
                                    <Setter Property="BorderBrush" Value="Black"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Resources>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                            <Border Background="LightGray" Padding="5" BorderThickness="0,0,0,1" BorderBrush="Black">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Command="{Binding CommandMoveUp}">Move Up</Button>
                                    <Button Command="{Binding CommandMoveDown}">Move Down</Button>
                                    <Button Command="{Binding CommandDelete}">Delete</Button>
                                </StackPanel>
                            </Border>
                            <local:ScriptNodeControl DataContext="{Binding Child}" HorizontalAlignment="Left" Margin="5"></local:ScriptNodeControl>
                        </StackPanel>
                    </Border>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
