<UserControl x:Class="Blocktavius.AppDQB2.ScriptEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Blocktavius.AppDQB2"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock FontSize="18" FontWeight="Bold" VerticalAlignment="Center">
                <Run Text="Script Editor: "></Run>
                <Run Text="{Binding Settings.ScriptName}"></Run>
            </TextBlock>
            <Button FontSize="16" Padding="7,4,7,4" Margin="20,0,0,0" Click="PreviewScriptButton_Click">PREVIEW</Button>
            <Button FontSize="16" Padding="7,4,7,4" Margin="12,0,0,0" Click="RunScriptButton_Click">RUN...</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <local:ScriptChildListControl></local:ScriptChildListControl>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0,12,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <ComboBox ItemsSource="{Binding NodeKinds}" SelectedItem="{Binding SelectedNodeKind}"
                              DisplayMemberPath="DisplayName" MinWidth="90"></ComboBox>
                    <Button Command="{Binding CommandAddNode}" Margin="3,0,0,0">Add</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
