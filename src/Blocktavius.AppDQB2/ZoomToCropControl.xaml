<UserControl x:Class="Blocktavius.AppDQB2.ZoomToCropControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Blocktavius.AppDQB2"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Measurement and Content Host (behind, invisible but measured) -->
        <ScrollViewer x:Name="measurementViewer" Grid.Row="0" Panel.ZIndex="-1" Opacity="0" IsHitTestVisible="False" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ContentPresenter x:Name="contentHost" Content="{Binding RelativeSource={RelativeSource AncestorType=local:ZoomToCropControl}, Path=ZoomableContent}" />
        </ScrollViewer>

        <!-- Main Display -->
        <Viewbox Grid.Row="0" x:Name="theViewbox" Stretch="Uniform">
            <Grid x:Name="viewboxContentGrid">
                <Rectangle>
                    <Rectangle.Fill>
                        <VisualBrush x:Name="theBrush" Stretch="None" AlignmentX="Left" AlignmentY="Top" />
                    </Rectangle.Fill>
                </Rectangle>
                <Canvas x:Name="interactionCanvas" Background="Transparent" MouseDown="InteractionCanvas_MouseDown" MouseMove="InteractionCanvas_MouseMove" MouseUp="InteractionCanvas_MouseUp">
                    <!-- White border -->
                    <Rectangle x:Name="selectionRectangleWhite"
                               Stroke="White"
                               StrokeThickness="4"
                               Visibility="Collapsed" />
                    <!-- Black outer line -->
                    <Rectangle x:Name="selectionRectangle"
                               Stroke="Black"
                               StrokeThickness="2"
                               Visibility="Collapsed" />
                </Canvas>
            </Grid>
        </Viewbox>

        <Grid Grid.Row="1" Margin="0,5,0,5">
            <Button HorizontalAlignment="Center" x:Name="resetButton" Content="Reset Zoom" Click="ResetZoom_Click" />
            <TextBlock x:Name="zoomMessageTextBlock" Text="Draw a rectangle to crop + zoom" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>

    </Grid>
</UserControl>